<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#c5b2ce"
	>

<RelativeLayout
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<androidx.cardview.widget.CardView
		android:id="@+id/card1"
		android:layout_width="350dp"
		android:layout_height="150dp"
		android:layout_marginLeft="30dp"
		android:layout_marginTop="30dp"
		android:background="@color/black"
		app:cardCornerRadius="10dp"
		app:cardElevation="10dp">

		<ImageView
			android:id="@+id/imageView3"
			android:layout_width="151dp"
			android:layout_height="136dp"

			app:srcCompat="@drawable/beverages" />

		<TextView
			android:id="@+id/textView"
			android:layout_width="200dp"
			android:layout_height="150dp"
			android:layout_marginLeft="152sp"
			android:layout_marginTop="0dp"
			android:background="#f4f0ea"
			android:text="Beverages                 50% OFF ON Mondays          🍹"
			android:textSize="30sp"
			android:textStyle="bold" />
	</androidx.cardview.widget.CardView>

	<androidx.cardview.widget.CardView
		android:id="@+id/card2"
		android:layout_width="350dp"
		android:layout_height="150dp"
		android:layout_below="@+id/card1"
		android:layout_marginLeft="30dp"
		android:layout_marginTop="30dp"
		android:background="@color/black"
		app:cardCornerRadius="10dp"
		app:cardElevation="10dp">


		<ImageView
			android:id="@+id/imageView5"
			android:layout_width="150dp"
			android:layout_height="150dp"
			android:background="#b8ebf5"
			app:srcCompat="@drawable/chinese" />

		<TextView
			android:id="@+id/textView1"
			android:layout_width="200dp"
			android:layout_height="150dp"
			android:layout_marginLeft="152sp"
			android:layout_marginTop="0dp"
			android:background="#f4f0ea"
			android:text="CHINESE                30% OFF ON Tuesdays           🍜"
			android:textSize="30sp"
			android:textStyle="bold" />
	</androidx.cardview.widget.CardView>

	<androidx.cardview.widget.CardView
		android:id="@+id/card3"
		android:layout_width="350dp"
		android:layout_height="150dp"
		android:layout_below="@+id/card2"
		android:layout_marginLeft="30dp"
		android:layout_marginTop="30dp"
		app:cardCornerRadius="10dp"
		app:cardElevation="10dp">

		<ImageView
			android:id="@+id/imageView6"
			android:layout_width="150dp"
			android:layout_height="150dp"
			android:background="#b8ebf5"
			app:srcCompat="@drawable/pizza" />

		<TextView
			android:id="@+id/textView2"
			android:layout_width="200dp"
			android:layout_height="150dp"
			android:layout_marginLeft="152sp"
			android:layout_marginTop="0dp"
			android:background="#f4f0ea"
			android:text="PIZZA                60% OFF ON           Wednesdays           🍕"
			android:textSize="30sp"
			android:textStyle="bold" />
	</androidx.cardview.widget.CardView>

	<androidx.cardview.widget.CardView
		android:id="@+id/card4"
		android:layout_width="350dp"
		android:layout_height="150dp"
		android:layout_below="@+id/card3"
		android:layout_marginLeft="30dp"
		android:layout_marginTop="30dp"
		app:cardCornerRadius="10dp"
		app:cardElevation="10dp">

		<ImageView
			android:id="@+id/imageView7"

			android:layout_width="150dp"
			android:layout_height="150dp"

			app:srcCompat="@drawable/combo" />

		<TextView
			android:id="@+id/textView3"
			android:layout_width="200dp"
			android:layout_height="150dp"
			android:layout_marginLeft="152sp"
			android:layout_marginTop="0dp"
			android:background="#f4f0ea"
			android:text="Combo Offers                ON           Thursdays           🍔🍸"
			android:textSize="30sp"
			android:textStyle="bold" />

	</androidx.cardview.widget.CardView>

	<androidx.cardview.widget.CardView
		android:id="@+id/card5"
		android:layout_width="350dp"
		android:layout_height="150dp"
		android:layout_below="@+id/card4"
		android:layout_marginLeft="30dp"
		android:layout_marginTop="30dp"
		app:cardCornerRadius="10dp"
		app:cardElevation="10dp">

		<ImageView
			android:id="@+id/imageView8"
			android:layout_width="150dp"
			android:layout_height="match_parent"

			app:srcCompat="@drawable/bucket" />

		<TextView
			android:id="@+id/textView4"
			android:layout_width="200dp"
			android:layout_height="150dp"
			android:layout_marginLeft="152sp"
			android:layout_marginTop="0dp"
			android:background="#f4f0ea"
			android:text=" Off on Buckets               ON           Thursdays🍗"
			android:textSize="30sp"
			android:textStyle="bold" />

	</androidx.cardview.widget.CardView>

	<androidx.cardview.widget.CardView
		android:id="@+id/card6"
		android:layout_width="350dp"
		android:layout_height="150dp"
		android:layout_below="@+id/card5"
		android:layout_marginLeft="30dp"
		android:layout_marginTop="30dp"
		app:cardCornerRadius="10dp"
		app:cardElevation="10dp">

		<ImageView
			android:id="@+id/imageView9"
			android:layout_width="154dp"
			android:layout_height="132dp"

			app:srcCompat="@drawable/sweet" />

		<TextView
			android:id="@+id/textView5"
			android:layout_width="195dp"
			android:layout_height="match_parent"
			android:layout_marginLeft="152sp"
			android:layout_marginTop="0dp"
			android:background="#f4f0ea"
			android:text="Free Desserts               ON           Fridays🍰"
			android:textSize="30sp"
			android:textStyle="bold" />
	</androidx.cardview.widget.CardView>
</RelativeLayout>
</ScrollView>